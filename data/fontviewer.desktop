[Desktop Entry]
Name=Fonts
Icon=preferences-desktop-font
Exec=fontviewer %u
Type=Application
Categories=Utility
MimeType=application/x-font-ttf;application/x-font-pcf;application/x-font-type1;application/x-font-otf;font/ttf;font/otf;
Comment=View and install fonts
Terminal=false
Actions=fontviewer-google;

[Desktop Action fontviewer-google]
Name=Google Fonts
Exec=fontviewer --google-fonts
Icon=fontviewer-google-symbolic
